<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN" "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-resource enabled="true" jndi-name="jdbc/student" object-type="user" pool-name="studentPool">
        <description>jdbc derby data source</description>
    </jdbc-resource>
    <jdbc-connection-pool connection-validation-method="auto-commit" datasource-classname="org.apache.derby.jdbc.ClientDriver" is-isolation-level-guaranteed="true" lazy-connection-association="false" name="studentPool" non-transactional-connections="false" res-type="javax.sql.ConnectionPoolDataSource" steady-pool-size="8">
